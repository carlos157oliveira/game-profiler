<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.humanstyle.HumanFragment">

    <RadioGroup
        android:id="@+id/radioGroupGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp">

        <RadioButton
            android:id="@+id/radioMan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Homem" />

        <RadioButton
            android:id="@+id/radioWoman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mulher" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GÃªnero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/radioGroupGender"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humor"
        android:layout_margin="20dp"
        />

    <RadioGroup
        app:layout_constraintTop_toBottomOf="@id/radioGroupGender"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/radioGroupMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <RadioButton
            android:id="@+id/radioHappy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feliz" />

        <RadioButton
            android:id="@+id/radioSad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Triste" />

        <RadioButton
            android:id="@+id/radioSurprised"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Surpreso" />
    </RadioGroup>


    <Button
        android:id="@+id/btnObtainResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Obter Perfil" />

</androidx.constraintlayout.widget.ConstraintLayout>